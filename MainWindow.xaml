<!-- MainWindow.xaml -->
<Window x:Class="TFMUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TFM" 
        Height="300" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- título -->
        <TextBlock Text="Análisis de Riesgo Startups"
               FontSize="18" FontWeight="Bold"
               HorizontalAlignment="Center"/>

        <!-- zona drag&drop / clic -->
        <Border Grid.Row="1"
            BorderBrush="Gray" BorderThickness="2"
            CornerRadius="5" Background="WhiteSmoke"
            AllowDrop="True"
            DragOver="CsvDropZone_DragOver"
            Drop="CsvDropZone_Drop"
            MouseLeftButtonUp="CsvDropZone_Click"
            Margin="0,20,0,20">
            <TextBlock x:Name="txtDropZone"
                 Text="Arrastra aquí tu csv o haz clic para seleccionar"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 TextWrapping="Wrap"/>
        </Border>

        <!-- botón enviar -->
        <Button Grid.Row="2"
            Content="Predecir (SVM)"
            Width="140" Height="30"
            HorizontalAlignment="Center"
            Click="SendCsvButton_Click"/>
    </Grid>
</Window>
