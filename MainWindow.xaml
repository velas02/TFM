<!-- MainWindow.xaml -->
<Window x:Class="TFMUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TFM"
        Height="700" Width="700"
        Background="White"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <!-- estilo genérico para botones primarios azules -->
        <Style x:Key="primaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#007bff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- tabla -->
            <RowDefinition Height="*"/>
            <!-- zona punteada -->
            <RowDefinition Height="Auto"/>
            <!-- relleno -->
            <RowDefinition Height="Auto"/>
            <!-- botones -->
        </Grid.RowDefinitions>

        <!-- área de tabla con título y botón cerrar -->
        <Border Grid.Row="0"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="5"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- título de la tabla -->
                <TextBlock Text="Columnas del Dataset"
                           FontSize="16"
                           FontWeight="Bold"
                           Padding="10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="0" Grid.Column="0"/>


                <!-- DataGrid con filas de ejemplo -->
                <DataGrid x:Name="dataGrid"
                      Grid.Row="1" Grid.ColumnSpan="2"
                      Margin="10"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      BorderThickness="0"
                      RowHeight="30"
                      GridLinesVisibility="None"
                      ColumnHeaderHeight="30"
                      AlternatingRowBackground="WhiteSmoke"
                      RowBackground="White"
                      MaxHeight="300"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Columna"
                            Binding="{Binding Column}"
                            Width="*"/>
                        <DataGridTextColumn Header="Descripción"
                            Binding="{Binding Description}"
                            Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- zona de arrastre/clic punteada -->
        <Border Grid.Row="1"
                BorderBrush="Transparent"
                Background="Transparent"
                Height="150"
                AllowDrop="True"
                DragOver="CsvDropZone_DragOver"
                Drop="CsvDropZone_Drop"
                MouseLeftButtonUp="CsvDropZone_Click">
            <Grid>
                <Rectangle Stroke="Gray"
                           StrokeDashArray="4,2"
                           RadiusX="5"
                           RadiusY="5"
                           Fill="Transparent"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
                <TextBlock x:Name="txtDropZone"
                           Text="Arrastre y suelte un archivo CSV aquí o haga clic para cargarlo"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- botones organizados en 2 columnas × 2 filas -->
        <UniformGrid Grid.Row="3"
                     Columns="2"
                     Rows="2"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Bottom"
                     Margin="0,10,0,0">
            <Button Content="Predecir con SVM"
                    Style="{StaticResource primaryButton}"
                    Click="PredictSvm_Click"/>
            <Button Content="Predecir con MLP"
                    Style="{StaticResource primaryButton}"
                    Click="PredictMlp_Click"/>
            <Button Content="SHAP con SVM"
                    Style="{StaticResource primaryButton}"
                    Click="ShapSvm_Click"/>
            <Button Content="SHAP con MLP"
                    Style="{StaticResource primaryButton}"
                    Click="ShapMlp_Click"/>
        </UniformGrid>
    </Grid>
</Window>
